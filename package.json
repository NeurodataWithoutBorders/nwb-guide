{
  "name": "neuroconv-app",
  "productName": "NeuroConv",
  "version": "0.0.1",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "npm run build && npm run start:electron",
    "start:electron": "NODE_ENV=development electron .",
    "dev": "concurrently -n BE,FE --kill-others \"npm run dev:server\" \"npm run dev:app\"",
    "dev:app": "vite",
    "dev:server": "cd pyflask && python -m flask run --port 4242",
    "build": "npm run build:app",
    "build:app": "vite build",
    "test": "npm run test:server",
    "test:server": "pytest pyflask/tests/ -s",
    "build-win": "electron-builder build --win --publish never",
    "build-mac": "electron-builder build --mac --publish never",
    "build-linux": "electron-builder build --linux --publish never",
    "deploy-win": "electron-builder build --win --publish always",
    "deploy-mac": "electron-builder build --mac --publish always",
    "deploy-linux": "electron-builder build --linux --publish always",
    "python-onefile-build": "python -m PyInstaller --onefile --clean ./pyflask/app.py --distpath ./pyflaskdist",
    "format": "prettier --ignore-path .gitignore --ignore-path .prettierignore \"./**/*.+(html|css|js|md|yml)\" --write",
    "postinstall": "electron-builder install-app-deps",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic"
  },
  "lint-staged": {
    "./**/*.{html|css|js|md|yml}": [
      "npm run format"
    ]
  },
  "config": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/catalystneuro/neuroconv-app.git"
  },
  "build": {
    "appId": "com.catalystneuro.nwbguide",
    "generateUpdatesFilesForAllChannels": true,
    "afterSign": "./notarize.js",
    "files": [
      "**/*",
      "!pysoda/",
      "!build/",
      "!api.spec",
      "!Users/",
      "!pyflask/",
      "!docs/"
    ],
    "win": {
      "asar": false,
      "target": "nsis",
      "icon": "src/assets/app-icon/win/icon.ico"
    },
    "mac": {
      "asar": true,
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "src/assets/app-icon/png/icon.png",
      "darkModeSupport": false,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.inherit.plist",
      "entitlementsInherit": "entitlements.mac.inherit.plist",
      "extraResources": [
        {
          "from": "./pyflaskdist/app"
        }
      ]
    },
    "linux": {
      "asar": true,
      "target": "AppImage",
      "icon": "src/assets/app-icon/png/icon.png",
      "extraResources": [
        {
          "from": "./pyflaskdist/app"
        }
      ]
    },
    "nsis": {
      "createDesktopShortcut": "always",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/assets/app-icon/win/icon.ico"
    },
    "publish": {
      "provider": "github",
      "repository": "https://github.com/catalystneuro/neuroconv-app.git"
    }
  },
  "keywords": [],
  "author": {
    "name": "CatalystNeuro"
  },
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "2.0.8",
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@sweetalert2/theme-bulma": "^4.0.3",
    "axios": "^0.19.2",
    "concurrently": "^7.6.0",
    "electron-log": "^4.3.5",
    "electron-notarize": "^1.2.1",
    "electron-updater": "4.3.9",
    "find-free-port": "^2.0.0",
    "fomantic-ui": "^2.8.8",
    "fs-extra": "^10.0.0",
    "lit": "^2.6.1",
    "lottie-web": "^5.9.5",
    "notyf": "^3.9.0",
    "sweetalert2": "^10.16.9",
    "v8-compile-cache": "^2.3.0",
    "vite": "^4.1.4"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.0.0-beta.62",
    "@storybook/addon-links": "^7.0.0-beta.62",
    "@storybook/blocks": "^7.0.0-beta.62",
    "@storybook/web-components": "^7.0.0-beta.62",
    "@storybook/web-components-vite": "^7.0.0-beta.62",
    "chromatic": "^6.17.1",
    "electron": "19.0.0",
    "electron-builder": "22.10.5",
    "electron-packager": "^14.0.6",
    "electron-rebuild": "^1.11.0",
    "prettier": "^2.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.0-beta.62"
  },
  "optionalDependencies": {
    "win-node-env": "^0.4.0"
  },
  "bugs": {
    "url": "https://github.com/catalystneuro/neuroconv-app/issues"
  },
  "readme": "ERROR: No README data found!",
  "homepage": "https://github.com/catalystneuro/neuroconv-app#readme",
  "_id": "neuroconv-app@0.0.1"
}
