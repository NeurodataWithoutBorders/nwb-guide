{
    "required": [],
    "properties": {
        "SpikeGLXRecordingInterface": {
            "properties": {
                "folder_path": {
                    "format": "directory-path",
                    "type": "string",
                    "description": "Path to the folder containing the .ap.bin or .lf.bin SpikeGLX file."
                },
                "stream_id": {
                    "type": "string",
                    "description": "Stream ID of the SpikeGLX recording.\nExamples are 'imec0.ap', 'imec0.lf', 'imec1.ap', 'imec1.lf', etc."
                },
                "verbose": {
                    "default": false,
                    "type": "boolean",
                    "description": "Whether to output verbose text."
                },
                "es_key": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "description": "The key to access the metadata of the ElectricalSeries."
                }
            },
            "required": [
                "folder_path",
                "stream_id"
            ],
            "type": "object",
            "additionalProperties": false
        }
    },
    "type": "object",
    "additionalProperties": false,
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "source.schema.json",
    "title": "Source data schema",
    "description": "Schema for the source data, files and directories",
    "version": "0.1.0"
}
