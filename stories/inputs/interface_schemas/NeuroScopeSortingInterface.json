{
    "required": [],
    "properties": {
        "NeuroScopeSortingInterface": {
            "properties": {
                "folder_path": {
                    "format": "directory-path",
                    "type": "string",
                    "description": "Path to folder containing .res and .clu files."
                },
                "keep_mua_units": {
                    "default": true,
                    "type": "boolean",
                    "description": "Whether to return sorted spikes from multi-unit activity."
                },
                "exclude_shanks": {
                    "anyOf": [
                        {
                            "items": {
                                "type": "integer"
                            },
                            "type": "array"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "description": "List of indices to ignore."
                },
                "xml_file_path": {
                    "anyOf": [
                        {
                            "format": "file-path",
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "description": "Path to .xml file containing device and electrode configuration."
                },
                "verbose": {
                    "default": true,
                    "type": "boolean"
                }
            },
            "required": [
                "folder_path"
            ],
            "type": "object",
            "additionalProperties": false
        }
    },
    "type": "object",
    "additionalProperties": false,
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "source.schema.json",
    "title": "Source data schema",
    "description": "Schema for the source data, files and directories",
    "version": "0.1.0"
}